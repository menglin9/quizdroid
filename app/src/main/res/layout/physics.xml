<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lifecounter.menglin9.washington.edu.quiz.Physics">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#d7c3dc">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="#EB939A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: The physics is design for University physics. The Problem has 5 problems total. Have Fun!"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView2"
            android:textColor="#EB939A" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Begin"
            android:id="@+id/b1_0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d7c3dc"
            android:src="@drawable/physics"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView" />
    </LinearLayout>

</RelativeLayout>
